
     <table class="table table-borderless">
        
        <% client.comments.reverse.each do |comment| %>
        <tr>
        <td>
          <%= link_to user_path(comment.user),data: {"turbolinks"=>false} do %>
           <%= comment.user.last_name %> <%= comment.user.first_name %>
          <% end %>
          <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
        </td>
        </tr>
        
        <tr>
        <td><%= simple_format(comment.body) %></td>
         <% if comment.user == current_user %>
         <td>
           <%= link_to client_comment_path(client, comment), method: :delete, remote: true do %>
           <span class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></span>
           <% end %>
         </td>
         <% end %>
        </tr>
        <% end %>
        
    </table>
      
      
      