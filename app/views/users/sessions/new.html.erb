<div class="container">
  
  <div class="row my-5">
    <h3 class="col-2 offset-1 bg-light text-center">ログイン</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-group row mb-3 justify-content-center">
      <%= f.label :email, "メールアドレス", class:"col-2 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-4" %>
    </div>

    <div class="form-group row mb-3 justify-content-center">
      <%= f.label :password, "パスワード", class:"col-2 col-form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control col-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row mb-3 justify-content-center align-items-center">
        <%= f.check_box :remember_me, class:"offset-3" %>
        <%= f.label :remember_me, "情報を保存する", class:"col-4 col-form-label" %>
      </div>
    <% end %>

    <div class="row justify-content-center mb-5">
      <%= f.submit "ログイン", class:"btn btn-outline-primary px-5" %>
    </div>
  <% end %>

  <%#= render "users/shared/links" %>

</div>