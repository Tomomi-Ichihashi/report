<div class="container">
  <div class="row my-4">
    <h4 class="col-2 bg-light text-center">社員一覧</h4>
  </div>

  <div class="row mb-5">
    <div class="col-8 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>氏名</th>
            <th>部署名</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr class="border-bottom">
          <th>
            <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size:'50x50' %>
          </th>
          <th class="align-middle">
            <%= link_to "#{user.last_name}#{user.first_name}", user_path(user),data: {"turbolinks"=>false} %>
          </th>
          <th class="align-middle"><%= user.department.name %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

