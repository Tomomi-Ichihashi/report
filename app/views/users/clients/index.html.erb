<div class="container">
  
  <div class="row my-4">
    <h4 class="col-2 bg-light text-center">取引先一覧</h4>
    <span class="col-2 mx-4">
    <%= link_to " 取引先新規登録 ", new_client_path, class: 'btn btn-outline-success' %>
    </span>
  </div>

  <div class="row mb-3">
    <div class="col-8 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>取引先No.</th>
            <th>取引先名</th>
            <th>住所</th>
          </tr>
        </thead>
        <% @clients.each do |client| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= client.id %></th>
          <th class="align-middle">
            <%= link_to "#{client.name}", client_path(client) %>
          </th>
          <th class="align-middle"><%= client.address %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  <div class="row mb-5">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @clients %>
    </div>
  </div>

</div>