<div class="container">
  
  <div class="row my-4">
    <h4 class="col-3 bg-light text-center"><%= @client.name %>の詳細</h4>
    <spam class="col-2 mx-2">
      <%= link_to "編集", edit_client_path(@client), class:"offset-1 btn btn-outline-success" %>
    </spam>
  </div>
  
  <div class="row">
    <p class="text-success"><%= notice %></p>   
  </div>

  <div class="row">
    <div class="col-7 ">
      <table class="table table-bordered">
  
        <tr>
          <th class="text-center">取引先No.</th>
          <th><%= @client.id %></th>
        </tr>
        
        <tr>
          <th class="text-center">取引先名</th>
          <th><%= @client.name %></th>
        </tr>
        
        <tr>
          <th class="text-center">フリガナ</th>
          <th><%= @client.name_kana %></th>
        </tr>
        
        <tr>
          <th class="text-center">郵便番号</th>
          <th><%= @client.postal_code %></th>
        </tr>
        
        <tr>
          <th class="text-center">住所</th>
          <th><%= @client.address %></th>
        </tr>
        
        <tr>
          <th class="text-center">電話番号</th>
          <th><%= @client.telephone_number %></th>
        </tr>
        
        <tr>
          <th class="text-center">メールアドレス</th>
          <th><%= @client.email %></th>
        </tr>
        
      </table>
    </div>
    
     <div class="col-5">
       <h5>＜引き継ぎ事項＞</h5>
　　　　<!--コメント機能非同期-->
        <div id="comment_form" class="mb-3">
         <%= render 'users/comments/form', comment: @comment, client: @client %>
        </div>
        
        <div id="comment_index">
       　<%= render 'users/comments/index', client: @client %>
      　</div>
        <!--コメント機能非同期-->
     </div>
  </div>
  
</div>