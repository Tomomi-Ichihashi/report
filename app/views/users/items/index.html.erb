<div class="container">
  
  <div class="row my-4">
    <h4 class="col-2 bg-light text-center">報告一覧</h4>
    <span class="col-2 mx-4">
    <%= link_to " 報告新規作成 ", new_item_path, class: 'btn btn-outline-success' %>
    </span>
  </div>
  
  <div class="row">
    <p class="text-success"><%= notice %></p>   
  </div>

  <div class="row mb-3">
    <div class="col-12 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>作成者</th>
            <th>取引先</th>
            <th>訪問日時</th>
            <th>確認</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= item.user.last_name %> <%= item.user.first_name %></th>
          <th class="align-middle"><%= item.client.name %></th>
          <th class="align-middle">
            <%= link_to "#{item.start_visit.strftime("%Y/%m/%d %H:%M")} ~ #{item.finish_visit.strftime("%Y/%m/%d %H:%M")}", item_path(item) %>
          </th>
          <th class="checks_buttons_<%= item.id %>">
            <%= render 'users/checks/check', item: item %>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  <div class="row mb-5">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
  
</div>