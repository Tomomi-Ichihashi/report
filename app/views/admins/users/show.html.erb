<div class="container">
  <div class="row my-4">
    <h4 class="col-3 bg-light text-center mr-3"><%= @user.last_name %><%= @user.first_name %>の詳細</h4>
    <%= link_to "編集", edit_admins_user_path(@user), class:"btn btn-outline-success" %>
  </div>

  <div class="row mb-5">
    <div class="col-8 mx-auto">
      <table class="table table-striped">
        
        <tr>
          <th class="text-center">社員画像</th>
          <th><%= attachment_image_tag @user, :image, fallback: "no_image.jpg", size:'150x150' %></th>
        </tr>
        
        <tr>
          <th class="text-center">氏名</th>
          <th><%= @user.last_name %> <%= @user.first_name %></th>
        </tr>
        
        <tr>
          <th class="text-center">フリガナ</th>
          <th><%= @user.last_name_kana %> <%= @user.first_name_kana %></th>
        </tr>
        
        <tr>
          <th class="text-center">部署名</th>
          <th><%= @user.department.name %></th>
        </tr>
        
        <tr>
          <th class="text-center">郵便番号</th>
          <th><%= @user.postal_code %></th>
        </tr>
        
        <tr>
          <th class="text-center">住所</th>
          <th><%= @user.address %></th>
        </tr>
        
        <tr>
          <th class="text-center">電話番号</th>
          <th><%= @user.telephone_number %></th>
        </tr>
        
        <tr>
          <th class="text-center">メールアドレス</th>
          <th><%= @user.email %></th>
        </tr>
  
        <tr>
          <th class="text-center">ステータス</th>
          <% if @user.is_active %>
            <th class="align-middle text-success">有効</th>
          <% else %>
            <th class="align-middle">退職</th>
          <% end %>
        </tr>

      </table>
    </div>
  </div>
  