<div class="container">
  <div class="row my-4">
    <h4 class="col-2 bg-light text-center">部署一覧</h4>
  </div>

  <%= form_with model:[:admins, @department], local:true do |f| %>
    <div class="form-group row mb-5 mx-auto">
      <%= f.label :name, "部署名", class:"col-1 col-form-label" %>
      <%= f.text_field :name, placeholder:"部署名", class:"form-control col-4", autofocus:true %>
      <%= f.submit "新規登録", class:"btn btn-outline-success mx-2" %>
    </div>
  <% end %>

  <div class="row mx-auto mb-3">
    <div class="col-5 mx-auto">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="text-center">部署名</th>
            <th></th>
          </tr>
        </thead>
        <% @departments.each do |department| %>
        <tr class="border-bottom">
          <th class="align-middle text-center"><%= department.name %></th>
          <th class="text-right"><%= link_to "編集", edit_admins_department_path(department.id), class:"btn btn-outline-success" %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  <div class="row mb-5">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @departments %>
    </div>
  </div>
  
</div>